{
  "hosting": {
    "public": "dist/chat-app/browser",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "firestore": {
      "host": "0.0.0.0",
      "port": 8080
    },
    "auth": {
      "host": "0.0.0.0",
      "port": 9099
    },
    "hosting": {
      "host": "0.0.0.0",
      "port": 5000
    }
  }
}
